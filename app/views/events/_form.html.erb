<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Название_мероприятия %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Информация_о_мероприятии %>
    <%= form.text_area :information, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.date_field :begin_date %>
  </div>

  <div class="form-group">
    <%= form.label :Фотография %>
    <%= form.file_field :photo, class: "form-control" %>
    <%= form.hidden_field :photo_cache %>
    <% if @event.photo.present? %>
      <%= image_tag @event.photo.url, class: "mt-4" %>
    <% end %>
  </div>
  <br>


  <div class="form-group">
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>

<% end %>
