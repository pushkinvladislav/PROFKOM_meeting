<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Мероприятия</h1>
</div>
<table class='table table-striped text-center'>
  <thead>
  <tr>
    <th>Название</th>
    <th>Информация</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="row justify-content-center">
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.information %></td>
        <td><%= link_to 'Участники', show_students_path(event), class: 'btn btn-sm btn-outline-secondary', id: "students" %></td>
        <td>
          <% if event.activation %>
            <%= link_to 'Закрыть регистрацию', activation_event_path(event), id: "inactive", method: :patch, class: 'inactive btn btn-sm btn-outline-secondary', remote: true %>
          <% else %>
            <%= link_to 'Открыть регистрацию', activation_event_path(event), id: "active", method: :patch, class: 'active btn btn-sm btn-outline-secondary', remote: true %>
          <% end %>
        </td>
        <td><%= link_to 'Показать', event, class: 'btn btn-sm btn-outline-secondary' %></td>
        <td><%= link_to 'Изменить', edit_event_path(event), class: 'btn btn-sm btn-outline-secondary' %></td>
        <td><%= link_to 'Удалить', event, class: 'btn btn-sm btn-outline-secondary', remote: true, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </div>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новое мероприятие', new_event_path, class: 'btn btn-sm btn-outline-secondary' %>


<div class="row justify-content-center">
  <% @events.each do |event| %>
    <div class="col-sm-2">
      <div class="card">
        <%= image_tag event.photo.url, class: 'card-img-top' if event.photo? %>
        <div class="card-body">
          <h4 class="card-title"><%= event.name %></h4>
          <tr>
            <td><%= link_to 'Участники', show_students_path(event), class: 'btn btn-sm btn-outline-secondary' %></td>
            <td>
              <% if event.activation %>
                <%= link_to 'Закрыть регистрацию', activation_event_path(event), method: :patch, class: 'btn btn-sm btn-outline-secondary' %>
              <% else %>
                <%= link_to 'Открыть регистрацию', activation_event_path(event), method: :patch, class: 'btn btn-sm btn-outline-secondary' %>
              <% end %>
            </td>
            <td><%= link_to 'Показать', event, class: 'btn btn-sm btn-outline-secondary' %></td>
            <td><%= link_to 'Изменить', edit_event_path(event), class: 'btn btn-sm btn-outline-secondary' %></td>
            <td><%= link_to 'Удалить', event, class: "bi bi-trash", remote: true, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</div>