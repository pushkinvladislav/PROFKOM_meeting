<section class = "form-auth text-center" >
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Вход</h1>
    <label for="inputEmail" class="visually-hidden">Электронный адрес</label>
    <%= f.email_field :email, autofocus: true, class: "form-control", id:"inputEmail", placeholder:"Почтовый адрес",  autocomplete: 'current-email' %>
 
    <label for="inputPassword" class="visually-hidden">Пароль</label> 
    <%= f.password_field :password, autocomplete: 'current-password', id: "inputPassword", class: "form-control", placeholder:"Пароль" %>
     <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Запомнить меня
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Вход</button>
    <p class="mt-5 mb-3 text-muted">© 2021</p>
  <% end %>


<%= render "devise/shared/links" %>
</section>