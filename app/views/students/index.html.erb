<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Участники</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <td><%= link_to 'Скачать список', students_path(format: "xls"), class: 'btn btn-sm btn-outline-secondary' %></td>
    </div>
  </div>
</div>


<table class='table table-striped text-center'>
  <thead>
  <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Email</th>
    <th>Группа</th>
    <th>Факультет</th>
    <th>№ студ. билета</th>
    <th>Телефон</th>
    <th>Vk</th>
    <th>Посещение</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.second_name %></td>
      <td><%= student.first_name %></td>
      <td><%= student.email %></td>
      <td><%= student.group %></td>
      <td><%= student.faculty %></td>
      <td><%= student.bilet %></td>
      <td><%= student.phone %></td>
      <td><%= student.vk_id %></td>
      <td>
        <% if student.visit %>
          <%= link_to 'Зарегистрирован', visit_update_student_path(student), class: "btn btn-sm btn-inline-secondary", method: :patch, remote: true %>
        <% else %>
          <%= link_to 'Зарегистрировать', visit_update_student_path(student), class: "btn btn-sm btn-outline-secondary", method: :patch, remote: true %>
        <% end %>
      </td>
      <td><%= link_to 'Показать', student, class: "btn btn-sm btn-outline-secondary" %></td>
      <td><%= link_to 'Удалить', student, class: "btn btn-sm btn-outline-secondary delete_student", remote: true, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


